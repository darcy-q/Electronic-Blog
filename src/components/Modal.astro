---
interface Props{
  id:string;
}

const { id } = Astro.props;
---

<div id={id} class="modal hidden">
  <div class="modal-content">
    <button class="close-btn" onClick={`closeModal(${id});`}>
      <img src="/Electronic-Blog/close.svg" alt="cerrar">
    </button>
    <slot />
  </div>
</div>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hidden {
    display: none;
  }

  .modal-content {
    background: white;
    padding: 50px 20px 20px 20px;
    border-radius: 8px;
    position: relative;
  }
  
  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    border: none;
    background: none;
    font-size: 18px;
    cursor: pointer;
  }
</style>
