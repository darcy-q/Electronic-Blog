---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

import Modal from "../../components/Modal.astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			
			#donate {
				display: flex;
				margin-bottom: 3rem;
				justify-content: space-evenly;


			}

			#donate a {
				background-color: rgba(var(--color6),70%);
				padding-top: 15px;
				padding-left: 30px;
				padding-right: 30px;
				padding-bottom: 15px;
				line-height: 0;
 				border-radius: 30px; 
				border: 2px solid transparent;

			}

			#donate a:hover{
				border:2px solid var(--color_3);
			}

			#donate a img {
				border-radius: 0;
			}

			#qrnequi{
				height: 20rem ;
			}


			.centro_texto {
				text-align: center;
				color: black;
			}

			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<script is:inline >
				function openModal(id) {
					document.getElementById(id).classList.remove("hidden");
				}

				function closeModal(id) {
					document.getElementById(id.id).classList.add("hidden");
				}
			</script>

			<h1 class="centro_texto">Mis proyectos</h1>

			<p class="centro_texto">Si deseas apoyarme puedes donar ðŸ’°</p>

			<div id="donate">
				<a  href="https://www.paypal.me/DAvilaBermudez" target="_blank" rel="noopener noreferrer">
					<img src="PayPal.svg" alt="boton de donar" width="90rem">
				</a>
				<a href="#" onClick="openModal('nequi');">
					<img src="logonequi.svg" alt="boton de donar" width="90rem">
				</a>
			</div>
			
			<Modal id="nequi">
				<h5 class="centro_texto">Escanea QR Nequi</h5>
				<img id="qrnequi" src="qrnequi.webp" alt="qr" >
			</Modal>


			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/Electronic-Blog/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
